<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaundryApp.MainPage"
             NavigationPage.HasNavigationBar="False">


    <StackLayout BackgroundColor="#8CC3A9" >
        <Image Source="logo.png" VerticalOptions="Center" WidthRequest="312" HeightRequest="312" Margin="10,60,20,10"></Image>
        <Label Text="EasyWash.id" Margin="0,0,0,0" HorizontalOptions="Center" FontSize="Large" TextColor="Black" FontAttributes="Bold"></Label>
        <Label Text="we clean everything" Margin="0,-8,0,0" HorizontalOptions="Center" FontSize="Small"  TextColor="Black" FontAttributes="Bold" FontFamily=""></Label>
        <Image Source="gelombang.png" Margin="0,43,0,0" HorizontalOptions="CenterAndExpand" HeightRequest="300" WidthRequest="410"></Image>
        <Image Source="bubble.png" Margin="0,-498,0,0" HorizontalOptions="CenterAndExpand" HeightRequest="300" WidthRequest="410"></Image>
        <Button x:Name="Btnsplash"
            Text="Let's Get Started"
            TextColor="White"
            Margin="50,25,50,50"
            CornerRadius="10"
            BackgroundColor="#198754"
            WidthRequest="293" FontAttributes="Bold" TextTransform="None" 
            Clicked="Btnsplash_Clicked_1"
        ></Button>
    </StackLayout>

</ContentPage>
