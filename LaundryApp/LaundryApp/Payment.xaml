                    HorizontalOptions="Center"
                    Margin="-20,-30,50,0" FontAttributes="Bold" TextTransform="None" FontSize="Medium"
            ></Label>
            <Image Source="price.png" VerticalOptions="Center" WidthRequest="130" Margin="30,-30,0,20"></Image>
            <Label  x:Name="pricetsh"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="240,-55,0,0" FontAttributes="Bold" TextTransform="None" FontSize="Medium"
            ></Label>
            

            <Label  Text="Towel"
                    TextColor="#198754"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="-215,20,50,0" FontAttributes="Bold" TextTransform="None" FontSize="Medium"
            ></Label>
            <Image Source="kotakjum.png" WidthRequest="50" HeightRequest="30" Margin="-120,-32,0,0"
            ></Image>
            <Label  x:Name="Labelitow"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="-3,-37,118,0" FontAttributes="Bold" TextTransform="None" FontSize="Medium"
            ></Label>
            <Label  Text="x"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="-20,-30,50,0" FontAttributes="Bold" TextTransform="None" FontSize="Medium"
            ></Label>
            <Image Source="pricetow.png" VerticalOptions="Center" WidthRequest="130" Margin="30,-30,0,20"></Image>
            <Label  x:Name="pricetw"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="240,-55,0,0" FontAttributes="Bold" TextTransform="None" FontSize="Medium"
            ></Label>
            

            <Image Source="cart.png" VerticalOptions="Center" WidthRequest="50" HeightRequest="50" Margin="0,100,0,0"
            ></Image>
            <Button x:Name="Btnpay"
                    Text="Pay Now"
                    TextColor="#FFFFFF"
                    BackgroundColor="#198754"
                    HorizontalOptions="Center"
                    CornerRadius="10" WidthRequest="90" HeightRequest="38"
                    Margin="230,-50,0,0" FontAttributes="Bold" TextTransform="None" FontSize="Small"
                    Clicked="Btnpay_Clicked"
            ></Button>

            <Label  x:Name="Labelitem"
                    TextColor="#198754"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="-243,-35,0,0" FontAttributes="Bold" TextTransform="None" FontSize="Small"
            ></Label>
            <Label 
                    Text="items"
                    TextColor="#198754"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="-130,-25,50,0" FontAttributes="Bold" TextTransform="None" FontSize="Small"
            ></Label>
            <Label  x:Name="total"
                    TextColor="#FD001F"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Margin="50,-29,0,0" FontAttributes="Bold" TextTransform="None" FontSize="Medium"
            ></Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>