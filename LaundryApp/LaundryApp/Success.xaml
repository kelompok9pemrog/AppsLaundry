<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaundryApp.Success"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout  BackgroundColor="#8CC3A9">
            <Image Source="gelombang.png" Margin="0,530,0,-400" HorizontalOptions="CenterAndExpand" HeightRequest="300" WidthRequest="410"></Image>
            <Image Source="Success.png" VerticalOptions="Center" WidthRequest="312" HeightRequest="312" Margin="10,-348,20,20"></Image>
            <Label Text="Payment Successful!" Margin="0,-20,0,0" HorizontalOptions="Center" FontSize="Large" TextColor="Black" FontAttributes="Bold"></Label>
            <Label Text="Now you can go back to home screen" Margin="0,10,0,50" HorizontalOptions="Center" FontSize="Small" TextColor="Black" FontAttributes="Bold"></Label>
            
            <Button x:Name="Btnhome"
            Text="Home"
            TextColor="White"
            Margin="50,105,50,50"
            CornerRadius="10"
            BackgroundColor="#198754"
            WidthRequest="293" FontAttributes="Bold" TextTransform="None"
            Clicked="Btnhome_Clicked"
            ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>